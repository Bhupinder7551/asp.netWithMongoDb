@model List<Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Customer</h2>
            <span>List of Customers </span><a data-toggle="tooltip" data-placement="top" title="Create" class="btn btn-danger btn-icon" asp-action="Create"><i class="ion-plus"></i></a>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Country</th>
                        <th scope="col">City</th>
                        <th scope="col">Street</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.Street</td>
                        <td>
                            <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-danger btn-icon" asp-action="Edit" asp-route-id="@item.Id"><i class="ion-edit"></i></a>
                            <a data-toggle="tooltip" data-placement="top" title="Remove" class="btn btn-danger btn-icon" asp-action="Delete" asp-route-id="@item.Id"><i class="ion-trash-a"></i></a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

